<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="HubTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorError">@color/onError</item>
        <item name="android:colorBackground">@color/onBackground</item>
    </style>

    <style name="HubTheme.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="HubTheme.ShapeTheme.FAB" parent="Widget.MaterialComponents.FloatingActionButton"/>
    <style name="HubTheme.ShapeTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">@dimen/padding_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:padding">@dimen/spacing_normal</item>-->
        <item name="cornerRadius">@dimen/padding_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="HubTheme.TextAppearance.Large" parent="TextAppearance.DribbbleShotTitle">
        <item name="android:fontFamily">@font/dosis_semibold</item>
    </style>

</resources>
