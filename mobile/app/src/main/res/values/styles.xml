<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="HubTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorError">@color/onError</item>
        <item name="android:colorBackground">@color/onBackground</item>
    </style>

    <style name="HubTheme.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="HubTheme.ShapeTheme.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:tint">@color/light_icon</item>
    </style>
    <style name="HubTheme.ShapeTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">@dimen/padding_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:padding">@dimen/spacing_normal</item>-->
        <item name="cornerRadius">@dimen/padding_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HubTheme.TextAppearance.Large" parent="TextAppearance.DribbbleShotTitle">
        <item name="android:fontFamily">@font/dosis_semibold</item>
    </style>

    <style name="HubTheme.TextAppearance.Small" parent="TextAppearance.DribbbleShotDescription">
        <item name="android:fontFamily">@font/dosis_medium</item>
    </style>

    <style name="HubTheme.TextAppearance.Price" parent="HubTheme.TextAppearance.Small">
        <item name="android:textColor">?colorError</item>
        <item name="android:fontFamily">@font/dosis_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFeatureSettings">onum, smcp</item>
    </style>

    <style name="HubTheme.ShapeTheme.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="collapseIcon">@drawable/shr_branded_menu</item>
    </style>
    <style name="HubTheme.ShapeTheme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/spacing_normal</item>
        <item name="cardElevation">@dimen/z_card</item>
        <item name="android:layout_margin">@dimen/spacing_micro</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="HubTheme.ShapeTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/padding_normal</item>
    </style>
    <style name="HubTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="HubTheme.AppbarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

</resources>
