<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="product" type="io.codelabs.xhandieshub.data.Product"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"
            tools:context=".view.ProductActivity">

        <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:background="?colorPrimary"
                                                         android:id="@+id/app_bar">

            <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
                                               android:layout_height="?attr/actionBarSize"
                                               android:id="@+id/toolbar"
                                               app:titleTextAppearance="@style/HubTheme.TextAppearance.Large.Toolbar"
                                               app:title="@string/product_details"
                                               android:theme="@style/HubTheme.AppbarOverlay"
                                               app:popupTheme="@style/HubTheme.PopupOverlay"
                                               app:navigationIcon="@drawable/ic_arrow_back_padded"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                               android:layout_marginTop="?attr/actionBarSize"
                                               android:layout_height="match_parent">

            <io.codelabs.widget.ForegroundLinearLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:orientation="vertical">

                <io.codelabs.widget.FourThreeImageView android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:imageUrl="@{product.image}"
                                                       android:layout_marginBottom="@dimen/spacing_normal"
                                                       android:scaleType="centerCrop"/>

                <io.codelabs.xhandieshub.view.widget.PreferenceView android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    app:title="Name"
                                                                    app:summary="@{product.name, default=Lorem}"/>

                <io.codelabs.xhandieshub.view.widget.PreferenceView android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    app:title="Description"
                                                                    app:summary="@{product.description, default=Lorem}"/>

                <io.codelabs.xhandieshub.view.widget.PreferenceView android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    app:title="Price (in GHC)"
                                                                    app:summary="@{product.price, default=12.99}"/>

                <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:layout_gravity="center"
                                                                   android:layout_marginTop="@dimen/spacing_large"
                                                                   style="@style/HubTheme.ShapeTheme.Button"
                                                                   app:icon="@drawable/twotone_add_shopping_cart_24px"
                                                                   android:text="@string/add_to_cart"
                                                                   android:onClick="addToCart"/>

            </io.codelabs.widget.ForegroundLinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>