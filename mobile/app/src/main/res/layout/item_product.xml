<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   style="@style/HubTheme.ShapeTheme.Card"
                                                   android:padding="@dimen/padding_normal">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">


        <io.codelabs.widget.ForegroundImageView android:layout_width="match_parent"
                                                android:layout_height="@dimen/nav_header_height"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                android:id="@+id/product_image"
                                                android:scaleType="centerCrop"
                                                android:padding="@dimen/spacing_normal"
                                                tools:src="@color/content_placeholder"/>

        <!-- Name -->
        <io.codelabs.widget.BaselineGridTextView android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 tools:text="@tools:sample/lorem"
                                                 app:layout_constraintTop_toBottomOf="@id/product_image"
                                                 android:gravity="center_horizontal"
                                                 android:textAppearance="@style/HubTheme.TextAppearance.Large"
                                                 android:id="@+id/product_name"/>

        <!-- Description -->
        <io.codelabs.widget.BaselineGridTextView android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:paddingStart="@dimen/spacing_normal"
                                                 android:paddingEnd="@dimen/spacing_normal"
                                                 android:paddingBottom="@dimen/padding_normal"
                                                 android:layout_marginTop="@dimen/spacing_micro"
                                                 tools:text="@tools:sample/lorem/random"
                                                 android:maxLines="3"
                                                 android:ellipsize="end"
                                                 app:layout_constraintTop_toBottomOf="@id/product_name"
                                                 android:gravity="center_vertical"
                                                 android:textAppearance="@style/HubTheme.TextAppearance.Small"
                                                 android:id="@+id/product_desc"/>

        <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:layout_marginEnd="@dimen/padding_large"
                                                           style="@style/HubTheme.ShapeTheme.Button.Text"
                                                           android:text="@string/add_to_cart"
                                                           android:id="@+id/add_product"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginTop="@dimen/spacing_micro"
                                                           app:layout_constraintTop_toBottomOf="@id/product_desc"
                                                           app:icon="@drawable/twotone_add_shopping_cart_24px"/>


        <!-- Price -->
        <io.codelabs.widget.BaselineGridTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 tools:text="GHC 12.99"
                                                 android:maxLines="1"
                                                 android:ellipsize="end"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintBottom_toBottomOf="@id/add_product"
                                                 android:paddingStart="@dimen/spacing_normal"
                                                 android:paddingEnd="@dimen/padding_large"
                                                 app:layout_constraintTop_toTopOf="@id/add_product"
                                                 app:layout_constraintTop_toBottomOf="@id/product_desc"
                                                 android:gravity="center_vertical|end"
                                                 android:textAppearance="@style/HubTheme.TextAppearance.Price"
                                                 android:id="@+id/product_price"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>