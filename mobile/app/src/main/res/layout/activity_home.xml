<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"
            android:fitsSystemWindows="true"
            tools:context=".view.HomeActivity">

        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                                   tools:itemCount="20"
                                                   android:scrollbars="vertical"
                                                   android:scrollbarStyle="outsideOverlay"
                                                   tools:listitem="@layout/item_product"
                                                   android:id="@+id/products_grid"/>


        <com.google.android.material.bottomappbar.BottomAppBar android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               style="@style/HubTheme.ShapeTheme.BottomAppBar"
                                                               app:fabAlignmentMode="center"
                                                               app:hideOnScroll="true"
                                                               android:theme="@style/HubTheme.AppbarOverlay"
                                                               app:popupTheme="@style/HubTheme.PopupOverlay"
                                                               android:id="@+id/bottom_bar"/>

        <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           style="@style/HubTheme.ShapeTheme.Button"
                                                           app:icon="@drawable/twotone_shopping_cart_24px"
                                                           android:text="@string/my_shopping_cart"
                                                           android:onClick="showCart"
                                                           android:layout_gravity="bottom|center_horizontal"
                                                           android:layout_marginBottom="28dp"
                                                           android:id="@+id/cart_button"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>